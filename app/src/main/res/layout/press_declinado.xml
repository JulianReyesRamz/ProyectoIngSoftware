<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#292929">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#292929">

            <TextView
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Press Precho Declinado"
                android:id="@+id/texto"
                android:layout_gravity="center_horizontal"
                android:textColor="#f80004"
                android:textStyle="bold"
                android:layout_weight="0.06"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_press_precho_declinado"
                android:layout_weight="0.09" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Informacion"
                android:id="@+id/textView2"
                android:textColorHighlight="#fc0606"
                android:textColor="#f80004"
                android:layout_weight="0.06"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Este ejercicio solicita el pectoral mayor, principalmente los haces inferiores, los triceps y el deltoide anterior"
                android:id="@+id/textView3"
                android:layout_gravity="left|top"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Como hacerlo"
                android:id="@+id/textView4"
                android:layout_weight="0.06"
                android:textColor="#f80004"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-Acostado con la cabeza hacia abajo, pies fijos para evitar desplazamientos"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-Lleva la barra desde la parte inferior del pecho hasta por encima de los hombors haciaendo un ligero arco"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>