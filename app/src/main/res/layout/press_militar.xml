<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#292929">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#292929">

            <TextView
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Press Militar"
                android:id="@+id/texto"
                android:layout_gravity="center_horizontal"
                android:textColor="#f80004"
                android:textStyle="bold"
                android:layout_weight="0.06"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.09"
                android:background="@drawable/press_militar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Informacion"
                android:id="@+id/textView2"
                android:textColorHighlight="#fc0606"
                android:textColor="#f80004"
                android:layout_weight="0.06"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Este ejercicio solicita principalmete el deltoide anterior y externo, el clavicular del pectoral mayor, el trapecio, el triceps y el serrato mayor"
                android:id="@+id/textView3"
                android:layout_gravity="left|top"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Como hacerlo"
                android:id="@+id/textView4"
                android:layout_weight="0.06"
                android:textColor="#f80004"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-De pien con espalda recta, barra cogida en pronacion y apoyada sobre la parte alta del pecho"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-Inspirar y empujar la barra verticalmete a una velocidad lenta y controlando el movimiento"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>