<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#292929">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#292929">

            <TextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Press Precho"
                android:id="@+id/texto"
                android:layout_gravity="center_horizontal"
                android:textColor="#f3ffffff"
                android:textStyle="bold"
                android:layout_weight="0.06"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_press_precho"
                android:layout_weight="0.11" />
            <TextView
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Informacion"
                android:id="@+id/textView2"
                android:textColorHighlight="#fc0606"
                android:textColor="#f80004"
                android:layout_weight="0.06"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Este ejercicio solicita el pectoral mayor en todo su conjunto, el pecotoral menor, los triceps, el deltoides anterior y el coracobraquial"
                android:id="@+id/textView3"
                android:layout_gravity="left|top"
                android:textColor="#fcfcfc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Como hacerlo"
                android:id="@+id/textView8"
                android:layout_weight="0.06"
                android:textColor="#f80004"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-Lleva la barra desde la parte inferior del pecho hasta por encima de los hombors haciaendo un ligero arco"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-Los codos se mantienen junto a el cuerpo"
                android:id="@+id/textView9"
                android:layout_weight="0.06"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>